FROM python:3.9.7
EXPOSE 8501
WORKDIR /app
RUN apt-get install \
    'ffmpeg'\
    'libsm6'\
    'libxext6'  -y
COPY ./requirements_for_docker.txt /app/requirements.txt
RUN pip install -r requirements.txt
COPY . /app
# ENTRYPOINT ["streamlit", "run"]
# CMD ["app.py"]
CMD streamlit run --server.port $PORT app.py
